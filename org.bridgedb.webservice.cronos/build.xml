<?xml version="1.0"?>
<project name="org.bridgedb.webservice.cronos" default="dist" basedir=".">

  <!-- always be java 1.5 compatible -->
  <property name="ant.build.javac.target" value="1.5"/>
  <property name="ant.build.javac.source" value="1.5"/>
	
  <property name="jar.name" value="../dist/org.bridgedb.webservice.cronos.jar"/>
  
  <target name="prepare">
	<mkdir dir="build"/>
  </target>

  <path id="dependencies">
	<fileset dir="lib/axis-1_4/lib" includes="*.jar" />
  </path>
  
  <path id="class.path">
    <path refid="dependencies"/>
    <fileset dir="../dist">
      <include name="org.bridgedb.jar"/>
      <include name="org.bridgedb.bio.jar"/>
    </fileset>
  </path>

  <target name="build" depends="prepare">
	<javac srcdir="src-axis"
		   includes="**"
		   debug="true"
		   destdir="build">
		<classpath refid="class.path"/>
	</javac>
    <javac srcdir="src"
		   includes="**"
		   debug="true"
		   destdir="build">
		<classpath refid="class.path"/>
	</javac>
    <copy toDir="../dist"><path refid="dependencies"/></copy>
  </target>
  
  <target name="jar" depends="build">
	<jar jarfile="${jar.name}">
	  <fileset dir="build" includes="**/*.class"/>
	</jar>
  </target>

  <target name="clean">
	<delete dir="build"/>
	<delete dir="doc"/>
  </target>

  <target name="dist-clean" depends="clean">
	<delete file="${jar.name}"/>
  </target>

  <target name="dist" depends="jar"/>
			 
	<target name="test" depends="build">
		<path id="test.classpath">
			<path refid="class.path"/>
			<pathelement location="build"/>
			<pathelement location="../corelib/build-lib/junit.jar"/>
			<pathelement location="../corelib/build-lib/measure.jar"/>
		</path>
		<javac srcdir="test" debug="true" 
					includes="**"
					destdir="build"
					source="1.5">
			<classpath refid="test.classpath"/>
		</javac>		
		<junit printsummary="on" haltonfailure="true" fork="true">
			<formatter type="brief" usefile="false"/>
			<classpath refid="test.classpath"/>
			<batchtest>
				<fileset dir="test">
					<include name="**/*Test*.java"/>
				</fileset>
			</batchtest>
		</junit>
	</target>

	<property name="wsdl.url" value="http://mips.helmholtz-muenchen.de/CronosWSService/CronosWS?WSDL"/>
	<property name="src.axis" value="src-axis"/>
	<property name="build.wpclient.dir" value="build/wpclient" />
	
	<target name="update-axis">
		<fail message="You must specify a url to the CRONOS web service WSDL: 
			ant -Dwsdl.url=http://mips.helmholtz-muenchen.de/CronosWSService/CronosWS?WSDL [ant target]">
			<condition>
				<not> <isset property="wsdl.url"/> </not>
			</condition>
		</fail>
		<delete dir="${src.axis}"/>
		<java classpathref="class.path" fork="true" failonerror="true" classname="org.apache.axis.wsdl.WSDL2Java">
			<arg value="-o" />
			<arg value="${src.axis}" />
			<arg value="-p" />
			<arg value="org.bridgedb.webservice.cronos" />
			<arg value="${wsdl.url}" />
		</java>
	</target>

</project>
